<div class="container">
  <div class="row">
    <div class="col-md-3">
            <div>
        <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table>
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @book.user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @book.user.introduction %></td>
            </tr>
          </tbody>
        </table>
          <% if current_user == @user %>
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user), class: "btn btn-outline-secondary" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
      </div>
      
      <%= render 'list' %>

    </div>
    
    
    
    
    
    

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <tbody>
          <tr>
            <%= link_to user_path(@book.user_id) do %>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <br><%= @user.name %>
              </td>
            <% end %>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if current_user == @user %>
          <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
        <% end %>
          </tr>
        </tbody>
      
      </table>
    </div>
  </div>  <!-- この行を追加 -->
</div> 